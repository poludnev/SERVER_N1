extends template-1.pug

append customStyles
    link(rel="stylesheet", href="http://localhost:8005/css/blog/style.css", type="text/css")

block content
    include ../contactFormModal.pug
    .container
        nav#navigation-bar-container.navbar.navbar-expand-lg.navbar-light.bg-transparent
            button.navbar-toggler(
                type='button'
                data-bs-toggle='collapse'
                data-bs-target='#navbar'
                aria-controls='navbar'
                aria-expanded='false'
                aria-label='Toggle navigation'
                )
                .navbar-toggler-icon
            a.navbar-brand(href='#')= 'Roman\'s Blog V1'
            #navbar.collapse.navbar-collapse.flex-row-reverse
                ul.nav.navbar-nav
                    li.nav-item
                        a.nav-link.active(href='#')= 'Blog'
                    li.nav-item
                        a.nav-link(href='/cv')= 'CV'
                    li.nav-item
                        a.nav-link.disabled(href='#')= 'Time line'
                    li.nav-item
                        a.nav-link.disabled(href='#')= 'Projects'
                    li.nav-item
                        a.nav-link(href='http://localhost:8005')= 'Home'
                    li.nav-item.dropdown
                        a.nav-link(href='#' data-bs-toggle="modal" data-bs-target="#contactFormModal")= 'Contact me'



        hr.my-2

        main.bg-transparent
            .row.pt-3.px-3.m-0
                .col-12.col-ms-3.col-md-4.p-0.m-0
                    .ava.m-2
                        img(src="http://localhost:8005/img/ava-1.jpg", width='100%')
                .col.p-0.m-0
                    .about-me.m-2(
                        style='text-align: left'
                    )
                        span
                            h2= 'Hello, guys. Iâ€™m Roman.'
