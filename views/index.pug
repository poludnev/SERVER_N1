    body
        block content
        include contactFormModal.pug
        #cover
            img.bg-img(id="img-1" src="img/index/bg-pic-1 copy.JPG")
            #shader

        #center-content
            .front-heading
                h1.mt-2= 'timid steps'
            .front-intro
                p.m-0.fs-6
                    | One old Chinese said, "A journey of a thousand miles begins with a single step".
                    br
                    | My journey started some time ago with a timid step and there is no end in sight.
            .front-nav-bar.d-flex.justify-content-center
                ul.nav.navbar.list-group.list-group-horizontal.m-0
                    li.list-group-item.disabled.d-none
                        a(href="")= 'steps'
                    li.list-group-item
                        a(href="blog")= 'blog'
                    li.list-group-item
                        a(href="cv")= 'cv'
                    li.list-group-item.disabled.d-none
                        a(href="")= 'projects'
        #footer-content
            .social-media-bar.m-2.m-md-3.m-lg-5
                //- button.btn.btn-primary(type="button" data-bs-toggle="modal" data-bs-target="#contactFormModal") Modal

                span.m-1.mx-md-2(type="button" data-bs-toggle="modal" data-bs-target="#contactFormModal")
                    img.social-media-img(src="img/index/sm-logo-mail-wt-256.png" alt="mail")
                span.m-1.mx-md-2(type="button" href=socialLinkes.instagram, id="", target="_blank")
                    a(href=socialLinkes.instagram, id="", target="_blank")
                        img.social-media-img(src="img/index/sm-logo-inst-wt-256.png" alt="inst")
                span.m-1.mx-md-2(type="button" href=socialLinkes.facebook, id="", target="_blank")
                    a(href=socialLinkes.facebook, id="", target="_blank")
                        img.social-media-img(src="img/index/sm-logo-fb-wt-256.png" alt="fb" )
                span.m-1.mx-md-2(type="button" href=socialLinkes.linkedIn, id="", target="_blank")
                    a(href=socialLinkes.linkedIn, id="", target="_blank")
                        img.social-media-img(src="img/index/sm-logo-lnkdin-wt-256.png" alt="lnkdin" )
                span.m-1.mx-md-2(type="button" href=socialLinkes.twitter, id="", target="_blank")
                    a(href=socialLinkes.twitter, id="", target="_blank")
                        img.social-media-img(src="img/index/sm-logo-twtr-wt-256.png" alt="tw" )


